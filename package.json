{
  "name": "swim-hub",
  "version": "1.0.0",
  "private": true,
  "description": "水泳選手マネジメントシステム - モノレポ",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:https": "npm run dev:https --workspace=apps/web",
    "dev:mobile": "cd apps/mobile && npm start",
    "dev:mobile:clear": "cd apps/mobile && npm run start:clear",
    "ios": "npm run ios --workspace=apps/mobile",
    "ios:clear": "npm run ios:clear --workspace=apps/mobile",
    "ios:run": "cd apps/mobile && npx dotenvx run -f .env.development -- expo run:ios",
    "ios:run:sim": "cd apps/mobile && npx dotenvx run -f .env.development -- expo run:ios --simulator \"iPhone 16\"",
    "build": "npm run build --workspace=apps/web",
    "build:web": "npm run build --workspace=apps/web",
    "build:mobile:android": "cd apps/mobile && eas build -p android",
    "build:mobile:ios": "cd apps/mobile && eas build -p ios",
    "start": "npm run start --workspace=apps/web",
    "start:web": "npm run start --workspace=apps/web",
    "lint": "npm run lint --workspaces --if-present",
    "lint:web": "npm run lint --workspace=apps/web",
    "lint:mobile": "npm run lint --workspace=apps/mobile",
    "test": "npm run test --workspaces --if-present",
    "test:unit": "npm run test --workspace=apps/web && npm run test --workspace=apps/shared",
    "test:watch": "npm run test:watch --workspace=apps/web",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "test:e2e": "npm run test:e2e --workspace=apps/web",
    "test:web": "npm run test --workspace=apps/web",
    "test:web:local": "npm run test:web:local --workspace=apps/web",
    "test:web:remote": "npm run test:web:remote --workspace=apps/web",
    "test:mobile": "npm run test --workspace=apps/mobile",
    "test:mobile:watch": "npm run test:watch --workspace=apps/mobile",
    "test:mobile:coverage": "npm run test:coverage --workspace=apps/mobile",
    "type-check": "npm run type-check --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "clean:mobile": "npm run clean --workspace=apps/mobile",
    "install:all": "npm install",
    "install:mobile": "npm install --workspace=apps/mobile",
    "docker:dev": "npm run docker:dev --workspace=apps/web",
    "docker:build": "npm run docker:build --workspace=apps/web",
    "docker:down": "npm run docker:down --workspace=apps/web",
    "supabase:start": "bash supabase/start.sh",
    "supabase:stop": "npx supabase stop --workdir supabase",
    "supabase:reset": "npx supabase db reset --workdir supabase",
    "supabase:status": "npx supabase status --workdir supabase"
  },
  "devDependencies": {
    "@alloc/quick-lru": "^5.2.0",
    "@dotenvx/dotenvx-ext-vault": "^0.3.2",
    "@playwright/test": "^1.56.1",
    "@types/node": "^25",
    "dotenv": "^17.2.3",
    "enhanced-resolve": "^5.18.4",
    "supabase": "^2.71.1",
    "tapable": "^2.3.0",
    "turbo": "^2.7.6",
    "typescript": "^5"
  },
  "overrides": {
    "tar": "^7.5.4",
    "diff": "^5.2.2",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "engines": {
    "node": "20.x",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/swim-hub.git"
  },
  "keywords": [
    "swimming",
    "management",
    "nextjs",
    "react-native",
    "supabase",
    "monorepo"
  ],
  "author": "開発チーム",
  "license": "MIT"
}
