{
  "name": "swim-hub",
  "version": "1.0.0",
  "private": true,
  "description": "水泳選手マネジメントシステム - モノレポ",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:mobile": "cd apps/mobile && flutter run",
    "build": "npm run build --workspace=apps/web",
    "build:web": "npm run build --workspace=apps/web",
    "build:mobile:android": "cd apps/mobile && flutter build apk",
    "build:mobile:ios": "cd apps/mobile && flutter build ios",
    "build:mobile:web": "cd apps/mobile && flutter build web --base-href $FLUTTER_BASE_HREF",
    "start": "npm run start --workspace=apps/web",
    "start:web": "npm run start --workspace=apps/web",
    "lint": "npm run lint --workspaces --if-present",
    "lint:web": "npm run lint --workspace=apps/web",
    "lint:mobile": "cd apps/mobile && flutter analyze",
    "test": "npm run test --workspaces --if-present",
    "test:unit": "npm run test --workspace=apps/web && npm run test --workspace=apps/shared",
    "test:watch": "npm run test:watch --workspace=apps/web",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "test:web": "npm run test --workspace=apps/web",
    "test:mobile": "cd apps/mobile && flutter test",
    "type-check": "npm run type-check --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "clean:mobile": "cd apps/mobile && flutter clean",
    "install:all": "npm install",
    "install:mobile": "cd apps/mobile && flutter pub get",
    "docker:dev": "npm run docker:dev --workspace=apps/web",
    "docker:build": "npm run docker:build --workspace=apps/web",
    "docker:down": "npm run docker:down --workspace=apps/web",
    "supabase:start": "npx supabase start --workdir supabase",
    "supabase:stop": "npx supabase stop --workdir supabase",
    "supabase:reset": "npx supabase db reset --workdir supabase",
    "supabase:status": "npx supabase status --workdir supabase"
  },
  "devDependencies": {
    "@types/node": "^24",
    "typescript": "^5",
    "turbo": "^2.6.0"
  },
  "engines": {
    "node": "20.x",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/swim-hub.git"
  },
  "keywords": [
    "swimming",
    "management",
    "nextjs",
    "flutter",
    "supabase",
    "monorepo"
  ],
  "author": "開発チーム",
  "license": "MIT"
}